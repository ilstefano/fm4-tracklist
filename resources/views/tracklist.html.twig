{% extends 'layout.html.twig' %}
{% set active = 'track' %}

{% block content %}

    <h1>{{ 'Last FM4 Tracklist'|trans }}</h1>

    <ul>
        {% for track in tracks %}
            <li>{{ track.id }} // {{ track.zeit }} | :{{ track.switch }}: <a href="{{ path('artist') }}/{{ track.trackid }}">{{ track.interpret}}</a> --- <a href="{{ path('track') }}/{{ track.trackid }}">{{ track.title }} </a>| Count: {{ track.count }}| Firstrun: {{ track.firstrun }}</li>
        {% endfor %}
    </ul>

{% endblock %}
